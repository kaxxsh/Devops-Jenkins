// destory
pipeline {
    agent any
    environment {
        AWS_REGION = "us-west-2"
    }
    stages {
        stage('Setup') {
            steps {
                script {
                    def branch = env.BRANCH_NAME ?: 'unknown'
                    echo "Detected Branch: ${branch}"

                    def envMap = ['dev': 'dev', 'stage': 'stage', 'prod': 'prod']
                    
                    if (envMap.containsKey(branch)) {
                        env.ENVIRONMENT = envMap[branch]
                    } else {
                        error "Invalid branch name detected: '${branch}'. Expected 'dev', 'stage', or 'prod'."
                    }

                    echo "Destroying resources for environment: ${env.ENVIRONMENT}"
                }
            }
        }
        stage('Terraform Init') {
            steps {
                dir('task3') {  // Run inside 'task3' folder
                    sh 'terraform init'
                }
            }
        }
        stage('Terraform Plan Destroy') {
            steps {
                dir('task3') {  // Run inside 'task3' folder
                    sh "terraform plan -destroy -out=tfplan -var-file=${env.ENVIRONMENT}.tfvars"
                }
            }
        }
        stage('Approval Before Destroy') {
            when {
                expression { return env.ENVIRONMENT == 'prod' }
            }
            steps {
                input "Approve destruction of ${env.ENVIRONMENT} environment?"
            }
        }
        stage('Terraform Destroy') {
            steps {
                dir('task3') {  // Run inside 'task3' folder
                    sh "terraform apply -auto-approve tfplan"
                }
            }
        }
    }
    post {
        success {
            echo "Terraform destruction successful for ${env.ENVIRONMENT}"
        }
        failure {
            echo "Terraform destruction failed for ${env.ENVIRONMENT}"
        }
    }
}